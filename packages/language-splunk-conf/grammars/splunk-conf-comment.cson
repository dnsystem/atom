name: "Splunk Conf file Comment"
scopeName: "source.splunk-conf-comment"
patterns: [
  {
    comment: "default conf file warning"
    match: "^# DO NOT EDIT THIS FILE\\!$"
    name: "invalid.illegal.splunk.conf.donotedit"
  }
  {
    comment: "A comment"
    match: "^\\s*#.*$"
    name: "comment.line.number-sign"
  }
  {
    comment: "A comment"
    begin: "^\\s*\\*.*$"
    end: "^\\s*$"
    name: "comment.line.asterisk"
  }
]
